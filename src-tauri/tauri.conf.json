{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Statusify",
    "version": "0.0.16"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "clipboard": {
        "all": true,
        "writeText": true,
        "readText": true
      },
      "os": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "show": true,
        "close": true,
        "hide": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "startDragging": true
      },
      "dialog": {
        "message": true,
        "save": true,
        "open": true
      },
      "fs": {
        "scope": ["$RESOURCE/images/*", "$RESOURCE/locales/*"],
        "readFile": true,
        "readDir": true,
        "writeFile": true
      },
      "path": {
        "all": true
      }
    },
    "systemTray": {
      "iconPath": "icons/tray.png",
      "iconAsTemplate": true,
      "title": "Statusify"
    },
    "bundle": {
      "targets": [
        "deb",
        "appimage",
        "nsis",
        "dmg",
        "updater"
      ],
      "active": true,
      "category": "Utility",
      "copyright": "Copyright Â© 2024 Orphoros",
      "publisher": "Orphoros",
      "deb": {
        "depends": [],
        "changelog": "../CHANGELOG.md",
        "section": "main",
        "priority": "standard"
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.orphoros.statusify",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null,
        "minimumSystemVersion": "10.13",
        "license": "../LICENSE"
      },
      "dmg": {
        "background": "icons/dmg-background.png",
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "windowSize": {
          "height": 400,
          "width": 660
        }
      },
      "resources": [
        "images/*",
        "locales/*"
      ],
      "longDescription": "Graphical user interface for to set custom rich presence on Discord",
      "shortDescription": "Custom rich presence for Discord",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "nsis": {
          "license": "../LICENSE"
        },
        "wix": {
          "license": "../LICENSE"
        }
      }
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://gist.githubusercontent.com/Orphoros/88c8102cd788b7fb569141e2a75ca528/raw/"
      ],
      "dialog": true,
      "windows": {
        "installMode": "passive"
      },
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEJDNENCRTgzRkUzNDY1QkMKUldTOFpUVCtnNzVNdkhQZEcwZzI0a1didVF2eVBCRnJMR3FqcHBTMzNhKzQ2STJuaDNrY1lCVEMK"
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "height": 880,
        "resizable": true,
        "title": "Statusify",
        "width": 1000,
        "minHeight": 500,
        "minWidth": 1000,
        "visible": false,
        "transparent": true,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ]
  }
}
