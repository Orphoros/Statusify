{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Statusify",
    "version": "0.0.4"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "show": true,
        "startDragging": true,
        "all": true
      },
      "dialog": {
        "message": true
      },
      "notification": {
        "all": true
      },
      "fs": {
        "scope": ["$RESOURCE/images/*"],
        "readFile": true,
        "readDir": true
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Utility",
      "copyright": "Copyright Â© 2024 Orphoros",
      "publisher": "Orphoros",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.orphoros.statusify",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null,
        "minimumSystemVersion": "10.13",
        "license": "../LICENSE"
      },
      "resources": [
        "images/*"
      ],
      "targets": "all",
      "longDescription": "Graphical user interface for to set custom rich presence on Discord",
      "shortDescription": "Custom rich presence for Discord",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "nsis": {
          "license": "../LICENSE"
        },
        "wix": {
          "license": "../LICENSE"
        }
      }
    },
    "security": {
      "csp": "default-src 'self'"
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://gist.githubusercontent.com/Orphoros/88c8102cd788b7fb569141e2a75ca528/raw/"
      ],
      "dialog": true,
      "windows": {
        "installMode": "passive"
      },
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEJDNENCRTgzRkUzNDY1QkMKUldTOFpUVCtnNzVNdkhQZEcwZzI0a1didVF2eVBCRnJMR3FqcHBTMzNhKzQ2STJuaDNrY1lCVEMK"
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "height": 880,
        "resizable": true,
        "title": "Statusify",
        "width": 1000,
        "minHeight": 500,
        "minWidth": 1000,
        "visible": false
      }
    ]
  }
}
